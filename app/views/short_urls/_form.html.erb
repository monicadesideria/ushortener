<%= form_for @short_url, remote: true do |f| %>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.label "Custom Url" %>
      <%= f.check_box :is_custom_url, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.label "Input your link" %>
      <%= f.text_field :original_url, placeholder: "Put your destination URL here. ex: http://google.com", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.label "Input your custom url" %>
      <p><%= "#{ENV["APP_PROTOCOL"]}:// #{ENV["SHORTENER_DOMAIN"]} /" %></p>
      <%= f.text_field :short_uid, placeholder: "Leave blank if you want to create default url", class: 'form-control' %>
    </div>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
